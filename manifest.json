{
    "manifest_version": 3,
    "name": "LLM Context Manager",
    "version": "1.0",
    "description": "Capture and transfer context between different LLM chat interfaces",
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "*://*.openai.com/*",
      "*://*.anthropic.com/*",
      "*://*.claude.google.com/*",
      "*://*.chatgpt.com/*",
      "*://*.gemini.google.com/app/*",
      "*://*.x.com/*",
      "*://*.x.grok.ai/*",
      "*://*.chat.deepseek.com/*",
      "*://*.deepseek.com/*",
      "*://*.kimi.ai/*",
      "*://*.aliyun.com/*",
      "*://*.alibaba.com/*"
    ],
    "content_scripts": [
      {
        "matches": [
          "*://*.openai.com/*",
          "*://*.anthropic.com/*",
          "*://*.claude.google.com/*",
          "*://*.chatgpt.com/*",
          "*://*.gemini.google.com/app/*",
          "*://*.x.com/*",
          "*://*.x.grok.ai/*",
          "*://*.chat.deepseek.com/*",
          "*://*.deepseek.com/*",
          "*://*.kimi.ai/*",
          "*://*.aliyun.com/*",
          "*://*.alibaba.com/*"
        ],
        "js": ["summarizer.js", "content.js"],
        "type": "module"
      }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "web_accessible_resources": [{
      "resources": [
        "summarizer.js",
        "content.js",
        "selector.json"
    ],
      "matches": ["<all_urls>"]
    }],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval' https://cdn.jsdelivr.net; object-src 'self'"
    }
  }